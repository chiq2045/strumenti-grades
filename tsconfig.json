{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "CommonJS",
    "target": "ESNext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "types": ["types"],
      "src": ["src"],
      "app": ["app"],
      "components": ["src/components"],
      "views": ["src/views"],
      "utils": ["src/utils"]
    }
  },
  "include": [
    "src/**/*",
    "app/**/*",
    "types/**/*",
    "babel.config.json",
    "webpack.common.ts",
    "webpack.dev.ts",
    "webpack.prod.ts"
  ]
}
